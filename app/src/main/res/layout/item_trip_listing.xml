<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_blank_empty"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                android:visibility="gone" />

            <ToggleButton
                android:id="@+id/btn_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/arrow_toggle"
                android:padding="5dp"
                android:textOff=""
                android:textOn=""
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-03-2018 "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 12:40 PM"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_medium" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/bullet_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_bullet_black" />

            <TextView
                android:id="@+id/txt_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/bullet_black"
                android:maxLines="5"
                android:textColor="@color/SubTextColor"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_above="@id/bullet_green"
                android:layout_below="@id/bullet_black"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey" />

            <ImageView
                android:id="@+id/bullet_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_destination"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_bullet_green" />

            <TextView
                android:id="@+id/txt_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_origin"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/bullet_green"
                android:textColor="@color/SubTextColor"
                android:textSize="@dimen/text_large" />

        </RelativeLayout>


        <com.rsmnm.Views.RippleView
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_pay_pending"
            android:visibility="gone"
            app:rv_centered="true"
            app:rv_color="@color/white" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance "
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/txt_distance_formulae"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/TextcolorLight"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/txt_distance_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Base Fare "
                    android:textSize="@dimen/text_large" />


                <TextView
                    android:id="@+id/txt_base_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time "
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/txt_time_formulae"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/TextcolorLight"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/txt_time_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiting "
                    android:textSize="@dimen/text_large" />

                <TextView
                    android:id="@+id/txt_waiting_formulae"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/TextcolorLight"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/txt_waiting_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total "
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sept_horizontal_profile" />
</LinearLayout>
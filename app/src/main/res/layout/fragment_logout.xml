<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Logout"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_xlarge"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Are you sure you want to logout from this app?"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_large" />


    <com.rsmnm.Views.RippleView
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_green_empty"
        android:gravity="center"
        app:rv_centered="true"
        app:rv_color="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </com.rsmnm.Views.RippleView>

    <com.rsmnm.Views.RippleView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_blank_empty"
        android:gravity="center"
        app:rv_centered="true"
        app:rv_color="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Yet"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
    </com.rsmnm.Views.RippleView>
</LinearLayout>

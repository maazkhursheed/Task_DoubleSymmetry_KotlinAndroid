<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_car"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/placeholder_img_profile"
        android:padding="2dp"
        android:src="@drawable/lux_car_type" />

    <TextView
        android:id="@+id/txt_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Lux SUV"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Seats 6)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Base Fare"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_base_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$19.50"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/sept_horizontal_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Per Minute"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_per_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.50"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/sept_horizontal_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Per Miles"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_per_miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.50"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/sept_horizontal_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancellation Fee"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cancellation_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.50"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/sept_horizontal_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Minimum Fare"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_minimum_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.50"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_medium" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sept_horizontal_profile" />

</LinearLayout>